{% extends "layout.njk" %}

{% set title = "Resultado da Busca" %}
{% set pageId="page-search-result" %}

{% block styles %}
    <link rel="stylesheet" href="./styles/main.css">
    <link rel="stylesheet" href="./styles/search-result.css">
{% endblock %}

{% block content %}
    {% include "partials/page-header.njk" %}

    <main>

        {% if total > 0 %}
            <h4>
                <strong>{{ total }} pontos</strong>
                encontrados
            </h4>

            <div class="cards">
                {% for place in places %}
                    <div class="card">
                        <img src="{{ place.image }}" alt="{{ place.name }}">
                        <h1>{{ place.name }}</h1>
                        <h3>{{ place.items }}</h3>
                        <address>
                            {{ place.city }},
                            {{ place.state }}<br/>
                            {{ place.address }}<br/>
                            {{ place.address2 }}
                        </address>
                    </div>
                {% endfor %}
            </div>
        {% else %}
            <h4><strong>Nenhum</strong> Itens n√£o encontrado</h4>
        {% endif %}

    </main>
{% endblock %}